# Configuration pour le développement local
# Copiez ce fichier vers .env et remplissez les valeurs

# Django
SECRET_KEY=your-secret-key-here
DEBUG=True

# Base de données (laissez vide pour SQLite en local)
DATABASE_URL=

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# APIs d'images (optionnel)
UNSPLASH_ACCESS_KEY=your-unsplash-key-here
BING_IMAGE_SUBSCRIPTION_KEY=your-bing-key-here

# Stockage AWS S3 (optionnel)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-west-3

# Configuration Render (automatiquement définie en production)
RENDER_EXTERNAL_HOSTNAME=


