# Configuration pour le développement local
# Copiez ce fichier vers .env et remplissez les valeurs

# Django
SECRET_KEY=your-secret-key-here
DEBUG=True

# Base de données (laissez vide pour SQLite en local)
DATABASE_URL=

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Tavily API (recherche web en temps réel - optionnel)
# Obtenez votre clé gratuite sur https://tavily.com
TAVILY_API_KEY=your-tavily-api-key-here

# Aviationstack API (DEPRECATED - utiliser Air France-KLM maintenant)
AVIATIONSTACK_API_KEY=your-aviationstack-api-key-here

# Air France-KLM API (vols RÉELS avec horaires, numéros, prix - PRIORITÉ)
# Obtenez vos clés sur https://developer.airfranceklm.com
# 1. Créez un compte développeur
# 2. Demandez l'accès à l'API Flight Status / Schedule
# 3. Récupérez votre API Key et API Secret
AIRFRANCE_KLM_API_KEY=your-airfrance-klm-api-key-here
AIRFRANCE_KLM_API_SECRET=your-airfrance-klm-api-secret-here

# APIs d'images (optionnel)
UNSPLASH_ACCESS_KEY=your-unsplash-key-here
BING_IMAGE_SUBSCRIPTION_KEY=your-bing-key-here

# Stockage AWS S3 (optionnel)
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-west-3

# Configuration Render (automatiquement définie en production)
RENDER_EXTERNAL_HOSTNAME=


